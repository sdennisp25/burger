<div class="jumbotron jumbotron-fluid">
	<div class="container">
		<h1 class="display-4">Eat Da Burger!</h1>
		<p class="lead">Enter and order the burger you would like to eat!</p>
	</div>
</div>

<div class="container">
	<div class="input-group mb-3">
		<input type="text" class="form-control" name="name" placeholder="Order your burger here...">
		<div class="input-group-append">
			<button class="btn btn-outline-secondary" type="button" id="button-addon2">Submit Order</button>
		</div>
	</div>

	<div class="row">

		<div class="col-md-1">

		</div>

		<div class="col-md-5">
			<h2>Your Order</h2>
			<div class="order">

				<ul>
					{{#each burgers}} {{#unless order}} {{> burgers/cat-block order=true}} {{/unless}} {{/each}}
				</ul>

			</div>
		</div>

		<div class="col-md-5">
			<h2>Eaten</h2>
			<div class="eaten">
				<ul>

					{{#each burgers}} {{#if eaten}} {{> burgers/cat-block order=false}} {{/if}} {{/each}}

				</ul>
			</div>
		</div>

		<div class="col-md-1">

		</div>

	</div>
</div>

<style>
	body {
	background-color: orange;
}

.jumbotron {
	background-color: red;
}

.input-group {
	width: 80%;
	margin-left: 10%;
	box-shadow: 2px 2px black;
}

.order {
	width: 100%;
	height: 500px;
	border: 2px solid black;
	box-shadow: 2px 2px black;
}

.eaten {
	width: 100%;
	height: 500px;
	border: 2px solid black;
	box-shadow: 2px 2px black;
}
</style>

